<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_campaign">

    <fragment
        android:id="@+id/navigation_campaign"
        android:name="com.marketingapps.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_campaign" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.marketingapps.ui.news.NewsFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_news" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.marketingapps.ui.profile.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_profile" />
